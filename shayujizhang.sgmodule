# ShayuVIP.surge
# Surge module — 修改 shayujizhang VIP 返回（仅作学习/调试）
# Save as "ShayuVIP.surge" and import into Surge (Config -> Import) or paste into your active config.

[General]
name = ShayuVIP
version = 1.0
author = Generated by ChatGPT
description = Surge module to modify shayujizhang vip response for learning/debug only
enabled = true

[Script]
# type: http-response (处理 response body)
# pattern: 正则匹配 URL（如需更宽松可去掉末尾的 path）
type = http-response
pattern = ^https?:\/\/api\.shayujizhang\.com\/account\/grant\/detail\/info.*$
# 使用你提供的 raw 脚本地址
script-path = https://raw.githubusercontent.com/franksmps/qinglong-scripts/refs/heads/main/shayujizhang.js
timeout = 10

# 如果你的 Surge 版本不支持该 raw 链接格式，替换为：
# https://raw.githubusercontent.com/Wizardp007/Scripts/main/QuantumultX/jss/shayujizhang.js

[MITM]
# 必须对目标域名启用 MITM（HTTPS 解密）
hostname = api.shayujizhang.com
